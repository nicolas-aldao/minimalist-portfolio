---
import Section from "../Section.astro"
import { formatDateToMonthYear } from "../../utils/dateFormat"
import { education } from "@cv"
---

<div style={{ paddingTop: "70px" }}>
  <Section title="Education & Certifications">
    <ul>
      {
        education.map(({ name, institution, url, startDate, endDate, description }) => {

          return (
            <li>
              <article>
                <header>
                  <a href={url}>
                    <h3>{name} - {institution}</h3>
                  </a>

                  <time>{startDate && `${startDate}  - ` } {endDate}</time>
                </header>

                <footer>
                  <p>{description}</p>
                </footer>
              </article>
            </li>
          )
        })
      }
    </ul>
  </Section>
</div>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  a {
    border-bottom: solid transparent;
  }
  a:hover {
    border-bottom: solid;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
