---
import Section from "../Section.astro"
import { formatDateToMonthYear } from "../../utils/dateFormat"
import { education } from "@cv"
---

<Section title="EducaciÃ³n y Certificaciones">
  <ul>
    {
      education.map(({ name, institution, url, startDate, endDate, description }) => {
        // estudios formales
        // const startYear = new Date(startDate).getFullYear()
        // const endYear =
        //   endDate != null ? new Date(endDate).getFullYear() : "Actual"
        // const years = `${startYear} - ${endYear}`
        let years;
        if (endDate) years = formatDateToMonthYear(endDate);

        return (
          <li>
            <article>
              <header>
                <a href={url}>
                  <h3>{name} - {institution}</h3>
                </a>

                <time>{years}</time>
              </header>

              <footer>
                <p>{description}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  a {
    border-bottom: solid transparent;
  }
  a:hover {
    margin-bottom: 0px;
    border-bottom: solid;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
