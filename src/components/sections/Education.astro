---
import Section from "../Section.astro"
import { formatDateToMonthYear } from "../../utils/dateFormat"
import { education } from "@cv"
---

<Section title="Education & Certifications">
  <ul>
    {
      education.map(({ name, institution, isLongStudy, url, startDate, endDate, description }) => {
        let years;
        // estudios formales, formato: 2016-2020
        if (isLongStudy && startDate) {
          const startYear = new Date(startDate).getFullYear();
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Actual"
          years = `${startYear} - ${endYear}`;
        } else if (endDate) { 
          // certificaciones, formato de finalizaci√≥n: abr 2024
          years = formatDateToMonthYear(endDate); 
        }

        return (
          <li>
            <article>
              <header>
                <a href={url}>
                  <h3>{name} - {institution}</h3>
                </a>

                <time>{years}</time>
              </header>

              <footer>
                <p>{description}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  a {
    border-bottom: solid transparent;
  }
  a:hover {
    border-bottom: solid;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
